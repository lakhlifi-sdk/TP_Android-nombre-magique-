<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Joueur1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_margin="30dp"
        android:text="Joueur 2: "
        android:textAlignment="center"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSelectHandleLeft="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"


        android:freezesText="true"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/textView2"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/ayoutNum1"


        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter a number"
            android:inputType="number"
            android:id="@+id/Num2_joueir2"

            >
        </com.google.android.material.textfield.TextInputEditText>



    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/send_Num2"
        android:text="Jouer"
        style="@style/RaiseButton"
        android:layout_below="@+id/ayoutNum1">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_Num2"
        android:layout_margin="100dp"
        android:id="@+id/restart"
        android:onClick="restart"
        android:text="Restart">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>